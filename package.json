{
  "name": "markdown-tiptap-editor",
  "displayName": "Tiptap Markdown Editor",
  "description": "View and edit Markdown files in a beautiful Notion-like Tiptap editor with AI-powered autocorrection and inline predictions.",
  "version": "0.1.0",
  "publisher": "janisberneker",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownTiptap.editor",
        "displayName": "Tiptap Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Tiptap Markdown Editor",
      "properties": {
        "markdownTiptap.aiAppId": {
          "type": "string",
          "default": "",
          "description": "Your Tiptap AI App ID from https://cloud.tiptap.dev"
        },
        "markdownTiptap.aiToken": {
          "type": "string",
          "default": "",
          "description": "Your Tiptap AI JWT token"
        },
        "markdownTiptap.autoSaveDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before syncing editor changes to the file (debounce)."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "vscode:prepublish": "node esbuild.mjs --production"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tiptap/core": "^3.0.0",
    "@tiptap/react": "^3.0.0",
    "@tiptap/pm": "^3.0.0",
    "@tiptap/starter-kit": "^3.0.0",
    "@tiptap/markdown": "^3.0.0",
    "@tiptap/extension-placeholder": "^3.0.0",
    "@tiptap/extension-task-list": "^3.0.0",
    "@tiptap/extension-task-item": "^3.0.0",
    "@tiptap/extension-highlight": "^3.0.0",
    "@tiptap/extension-typography": "^3.0.0",
    "@tiptap/extension-color": "^3.0.0",
    "@tiptap/extension-text-style": "^3.0.0",
    "@tiptap/extension-image": "^3.0.0",
    "@tiptap/extension-table": "^3.0.0",
    "@tiptap/extension-table-row": "^3.0.0",
    "@tiptap/extension-table-cell": "^3.0.0",
    "@tiptap/extension-table-header": "^3.0.0",
    "@tiptap/extension-subscript": "^3.0.0",
    "@tiptap/extension-superscript": "^3.0.0",
    "@tiptap/extension-text-align": "^3.0.0",
    "@tiptap/extension-code-block-lowlight": "^3.0.0",
    "lowlight": "^3.1.0"
  }
}
